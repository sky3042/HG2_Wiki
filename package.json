{
  "name": "houkai-gakuen-wiki",
  "version": "2.0.0",
  "private": true,
  "description": "崩壊学園のWikiサイト",
  "author": "Sky",
  "repository": "sky3042/HG2_Wiki",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "fetch-data": "npx tsx scripts/fetch-data.ts",
    "generate-sitemap": "npx tsx scripts/generate-sitemap.ts",
    "update": "npx tsx scripts/deploy.ts",
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "deploy": "vercel deploy",
    "deps:upgrade": "[ -z $GITHUB_ACTIONS ] && pnpm up -L notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link": "[ -z $GITHUB_ACTIONS ] && run-s deps:link:* || echo 'Skipping deps:update on CI'",
    "deps:unlink": "[ -z $GITHUB_ACTIONS ] && pnpm add notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link:notion-types": "pnpm link ../react-notion-x/packages/notion-types",
    "deps:link:notion-utils": "pnpm link ../react-notion-x/packages/notion-utils",
    "deps:link:notion-client": "pnpm link ../react-notion-x/packages/notion-client",
    "deps:link:react-notion-x": "pnpm link ../react-notion-x/packages/react-notion-x",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "test": "run-p test:*",
    "test:lint": "eslint .",
    "test:prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check"
  },
  "dependencies": {
    "@fisch0920/use-dark-mode": "^2.4.0",
    "@keyvhq/core": "^1.6.9",
    "@keyvhq/redis": "^1.6.10",
    "@react-icons/all-files": "^4.1.0",
    "chart.js": "^4.5.1",
    "classnames": "^2.5.1",
    "csv-parse": "^6.1.0",
    "expiry-map": "^2.0.0",
    "fathom-client": "^3.4.1",
    "ky": "^1.8.1",
    "lqip-modern": "^2.2.1",
    "lucide-react": "^0.554.0",
    "next": "^16.1.0",
    "notion-client": "^7.7.0",
    "notion-types": "^7.7.0",
    "notion-utils": "^7.7.0",
    "p-map": "^7.0.3",
    "p-memoize": "^7.1.1",
    "posthog-js": "^1.249.4",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-body-classname": "^1.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.1.1",
    "react-notion-x": "^7.7.0",
    "react-tweet": "^3.2.2",
    "react-use": "^17.6.0",
    "react-virtuoso": "^4.14.1",
    "rss": "^1.2.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@fisch0920/config": "^1.2.1",
    "@next/bundle-analyzer": "^15.3.3",
    "@types/node": "^24.10.1",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.13",
    "@types/react-body-classname": "^1.1.10",
    "@types/rss": "^0.0.32",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.35.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "cacheable-request": {
      "keyv": "npm:@keyvhq/core@~1.6.6"
    }
  },
  "prettier": "@fisch0920/config/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-unknown --write",
      "eslint --fix"
    ]
  }
}
